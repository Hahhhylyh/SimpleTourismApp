<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/light_green"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:typeface="serif"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/home_malaysia"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:background="@drawable/home_malaysia"
                android:text="Malaysia"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white" />

            <Button
                android:id="@+id/home_singapore"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:background="@drawable/home_singapore"
                android:text="Singapore"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white" />

            <Button
                android:id="@+id/home_japan"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:background="@drawable/home_japan"
                android:text="Japan"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white" />

            <Button
                android:id="@+id/home_hongkong"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:background="@drawable/home_hongkong"
                android:text="Hong Kong"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>