<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/list_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile_panda1"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:text="Chong Bang Yuan"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/list_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="4"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/list_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="300dp"
                    android:text="13/06/2020"
                    android:textSize="14dp"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/list_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:maxHeight="150dp"
        android:layout_marginTop="20dp"
        android:text="Hello World. The place is so amazing. I like the night view.Hello World. The place is so amazing. I like the night view.Hello World. The place is so amazing. I like the night view.Hello World. The place is so amazing. I like the night view.Hello World. The place is so amazing. I like the night view.Hello World. The place is so amazing. I like the night view.Hello World. The place is so amazing. I like the night view."
        android:textSize="16sp"
        android:paddingLeft="8dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>